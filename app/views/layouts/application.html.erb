<!DOCTYPE html>
<html>
  <head>
    <title>RideshareRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li>
            <%= link_to "Rideshare Home", trips_path, class: "nav-links" %>
          </li>
          <!-- link to drivers -->
          <li>
            <%= link_to "All Drivers", drivers_path, class: "nav-links" %>
          </li>
          <!-- add driver -->
          <li>
            <%= link_to "Add a Driver", new_driver_path, class: "nav-links" %>
          </li>
          <!-- link to passengers -->
          <li>
            <%= link_to "All Passengers", passengers_path, class: "nav-links" %>
          </li>
          <!-- add passenger -->
          <li>
            <%= link_to "Add a Passenger", new_passenger_path, class: "nav-links" %>
          </li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
